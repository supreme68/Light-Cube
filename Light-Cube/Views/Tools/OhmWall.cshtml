
@{
    ViewData["Title"] = "OhmWall";
}

<environment>
    <link rel="stylesheet" href="~/css/OhmWall.css" />
</environment>

<h1>Ohm Wall Prototype</h1>
<h2>What do you need to find?</h2>
<p></p>

<!--Find resistance(R) field -->
<button id="Resistance" class="btn btn-primary">Resistance(R)</button>
<form id="IdResistance">
    <label> Resistance (R)   </label><input>
    <label> = Enter Current  (U)</label><input>
    <label>: Enter Electricity (I)</label><input>
</form>

<!-- Find Current(U) field -->
<button id="Current" class="btn btn-primary">Electricity(I)</button>
<form id="IdCurrent">
    <label> Current (U)</label><input>
    <label> = Enter Resistance (R)</label><input>
    <label>: Enter Electricity (I)</label><input>
</form>

<!--Find electricity (I) field -->
<button id="Electricity" class="btn btn-primary">Current(U)</button>
<form id="IdElectricity">
    <label>Electricity (I)</label><input>
    <label> = Enter Current (U)</label><input>
    <label> : Enter Resistance (R)</label><input>
</form>

<environment>
    <script src="~/js/OhmWall.js"></script>
</environment>
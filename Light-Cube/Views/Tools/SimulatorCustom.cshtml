
@{
    ViewData["Title"] = "Simulator";
}



<environment>
    <link rel="stylesheet" href="~/css/Simulator.css" />
</environment>
<nav class="navbar" id="navigation">
    <button id="btn1" draggable="true" class="btn btn-primary" onclick="Resistor()">Resistor </button><br />
    <button draggable="true" class="btn btn-primary" onclick="Led()">LED </button><br />
    <button draggable="true" class="btn btn-primary" onclick="Battery()">Battery </button><br />
